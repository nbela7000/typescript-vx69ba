kepek[0][0]="kep/sb.png";
kepek[0][1]="kep/sh.png";
kepek[0][2]="kep/sf.png";
kepek[0][3]="kep/sv.png";
kepek[0][4]="kep/sk.png";
kepek[0][5]="kep/sf.png";
kepek[0][6]="kep/sh.png";
kepek[0][7]="kep/sb.png";
for (i=0;i<8;i++)
kep
ek[1][i]="kep/sgy.png";
for (i=2;i<6;i++)
for (j=0;j<8;j++)
kepek[i][j]="kep/ures.png";
for (i=0;i<8;i++)
kepek[6][i]="kep/vgy.png";
kepek[7][0]="kep/vb.png";
kepek[7][1]="kep/vh.png";
